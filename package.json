{
  "name": "@pokt-foundation/node-nanny",
  "description": "Blockchain monitoring and automation.",
  "repository": "https://github.com/pokt-foundation/portal",
  "author": "JonathonJulian <john@pokt.network>",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "build:clean": "turbo run build:clean",
    "build:fresh": "turbo run build:clean && turbo run build",
    "start": "docker-compose up nn_stack -d",
    "stop": "docker stop nn_stack",
    "rebuild": "docker-compose build --no-cache && docker-compose up nn_stack -d",
    "monitor": "command docker exec -it nn_stack pm2 monit"
  },
  "devDependencies": {
    "prettier": "2.5.1",
    "turbo": "^1.1.3",
    "typescript": "4.5.5"
  },
  "packageManager": "pnpm@6.32.3"
}
