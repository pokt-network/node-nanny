{
  "name": "@pokt-foundation/node-nanny-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@pokt-foundation/node-nanny-core": "workspace:^0.1.0",
    "apollo-server": "^3.6.7",
    "express": "^4.17.3",
    "graphql": "^16.3.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.8",
    "@graphql-codegen/typescript-operations": "2.3.5",
    "@graphql-codegen/typescript-react-apollo": "^3.2.11",
    "@types/express": "^4.17.13"
  },
  "scripts": {
    "start": "pnpm build && node ./dist/graphql/server.js",
    "start:dev": "pm2 start \"nodemon ./src/server.ts\" --name api-dev",
    "build": "tsc -b . && pnpm generate",
    "build:clean": "tsc --build --clean && rm -rf ./dist",
    "build:watch": "tsc -b -w .",
    "generate": "graphql-codegen --config codegen.yml"
  }
}
