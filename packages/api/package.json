{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start:graphql": "pnpm build && pm2 start ./dist/graphql/server.js --name \"graphql-api\"",
    "start:graphql:log": "pnpm build && pm2 start ./dist/graphql/server.js --name \"graphql-api\" --attach",
    "start:rest": "pnpm build && node ./dist/rest/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -b . && pnpm generate",
    "build:watch": "tsc -b -w .",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@pokt-foundation/node-monitoring-core": "workspace:^0.1.0",
    "apollo-server": "^3.6.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.3",
    "graphql": "^16.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.5",
    "@graphql-codegen/typescript-operations": "2.3.2",
    "@graphql-codegen/typescript-react-apollo": "^3.2.8",
    "@types/express": "^4.17.13"
  }
}
