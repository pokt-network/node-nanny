{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "types": ["@types/jest"],
    "target": "ES2020",
    "module": "commonjs",
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
