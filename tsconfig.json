{
  "compilerOptions": {
    "types": ["@types/jest"],
    "target": "es6",
    "module": "commonjs",
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "@pokt-foundation/node-monitoring/*": ["./packages/*/src"]
    },
    "strict": false,
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
